---
import { GithubIcon } from "@workspace/docs/ensrainbow.io/src/components/atoms/icons/GithubIcon";
import { TelegramIcon } from "@workspace/docs/ensrainbow.io/src/components/atoms/icons/TelegramIcon.tsx";
import cc from "classcat";
import { Balancer } from "react-wrap-balancer";
import TelegramBanner from "../../assets/telegram_image.svg";
import MobileTelegramBanner from "../../assets/telegram_mobile_image.svg";
import { ENSNodeLogoLight } from "../atoms/logos/ENSNodeLogoLight";

const buttonStyles =
  "transition text-sm leading-4 rounded-lg border font-medium inline-flex gap-2 items-center whitespace-nowrap underline-none py-2 px-4 pl-[11px] py-[9px] pr-[13px] gap-2 cursor-pointer";
const headerStyles = "text-lg leading-8 font-semibold";
const baseContainerStyles = "flex flex-col flex-nowrap justify-center items-center";
---

<aside class={cc([baseContainerStyles,"gap-5"])}>
    <div class={cc([baseContainerStyles, "gap-5 py-8 max-w-[270px] rounded-xl border px-4", "spread-the-word"])}>
        <ENSNodeLogoLight className="w-[52px] h-auto"/>
        <div class={cc([baseContainerStyles, "gap-2"])}>
            <h3 class={headerStyles}>Spread the word</h3>
            <Balancer as="p" className="text-center text-sm leading-6 font-normal">Your star helps us reach more developers and fuels our open-source mission</Balancer>
        </div>
        <a href="https://github.com/namehash/ensnode" target="_blank" rel="noopener noreferrer"><button class={buttonStyles} style={{fontSize: "14px", fontWeight: "500"}}><GithubIcon className="w-4 h-auto"/> Star on GitHub</button></a>
    </div>
    <div class={cc(["telegram-container", "max-w-[270px] w-full h-fit flex flex-col justify-center items-center flex-nowrap gap-8 pt-8 rounded-xl overflow-hidden"])}>
        <div class={cc([baseContainerStyles, "w-full h-fit gap-5 px-4" ])}>
            <div class={cc([baseContainerStyles, "gap-2"])}>
                <Balancer
                        as="h3"
                        className={cc([headerStyles, "self-stretch text-center"])}
                >
                    Become a part of our community in Telegram
                </Balancer>
                <Balancer
                        as="p"
                        className="text-sm leading-6 font-normal text-center"
                >
                    Get updates, technical support, and connect with our team building the multichain future.
                </Balancer>
            </div>
            <a href="http://t.me/ensnode" target="_blank" rel="noopener noreferrer"><button class={buttonStyles} style={{fontSize: "14px", fontWeight: "500"}}><TelegramIcon className="w-4 h-auto"/> Join our Telegram</button></a>
        </div>
        <img
                class="flex w-fit h-full shri0 object-contain bg-no-repeat"
                src={MobileTelegramBanner.src}
                alt="Telegram Banner"
        />
    </div>
</aside>

<style>
    h3 {
        color: var(--sl-color-white);
    }

    p {
        color: var(--sl-color-gray-2);
    }

    .spread-the-word {
        background-color: var(--sl-color-black);
        border-color: var(--sl-color-gray-6);
    }

    .telegram-container {
        background-image: linear-gradient(90deg, #F9FAFB 0%, #F3F5F7 100%);
    }

    button {
        color: var(--sl-color-black);
        background-color: var(--sl-color-white);
        border-color: var(--sl-color-white);
    }

    button:hover{
        background-color: #272727;
    }

</style>
